colour-segment = #D1D1D1
colour-bg = #E4E4E4

colour-add = #5BBD72
colour-remove = #D95C5C

colour-dk = #C41F3B
colour-paladin = #F58CBA
colour-priest = #FFFFFF
colour-warlock = #9482C9
colour-shaman = #0070DE
colour-mage = #69CCF0
colour-monk = #00FF96
colour-hunter = #ABD473
colour-rogue = #FFF569
colour-warrior = #C79C6E
colour-druid = #FF7D0A

// MIXINS

vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

user-select()
	vendor(user-select, arguments)

transform()
	vendor(transform, arguments)

classColour(colour)
	background-color colour
	border-color colour

selectionColour(colour)
	border-color colour
	background-color rgba(colour, 0.5)
	&:hover
		background-color darken(@background-color, 10%)

veticalCenter()
	position absolute
	top 50%
	transform translateY(-50%)


@import url("//fonts.googleapis.com/css?family=Lato:400,700")

body
	font-family 'Lato', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
	font-size 16px
	background-color colour-bg

.no-select
	user-select none

.show
	display block !important

.ui.grid
	font-size inherit

.bigger.icon
	font-size 3em
	vertical-align middle

.spinner
	top -100px

.ui.left.floated.image
	margin-right 0

.twitter-typeahead
	display block !important

.tt-dropdown-menu
	display none !important

.tt-hint
	color rgba(0, 0, 0, 0.4) !important

// SEARCH

.filter
	position fixed !important
	top 0
	left 0
	z-index 20
	width 100%
	height 100px
	background-color colour-bg

	& .input
		position relative
		margin auto
		width 340px
		display block
		margin-top 16px
		z-index 25

	& .counter
		text-align center
		margin-top 2px

	.view
		position absolute
		width 100%
		bottom 39px
		right -195px
		text-align center
		z-index 19

		i
			cursor pointer
			font-size 30px

// ROSTER

.bosses
	margin-top 100px

	& .notfound
		margin-top 20px
		text-align center
		font-size 22pt

.lootsheet
	margin-top 100px

.boss.loot
	.panel
		width 200px !important
		position relative
		min-height 70px
		text-align left !important
		margin-bottom 10px

		.icon
			veticalCenter()
			width 60px
			left 0

		.name
			margin 0 0 0 70px
			veticalCenter()

	.items
		font-size 0

		.row
			clear both
			margin-bottom 15px

			&:last-child
				margin-bottom 0

		.left
			float left
			width 230px

			&.wide
				width 350px

		.item
			display inline-block
			position relative
			width 180px
			height 50px
			margin-bottom 10px
			white-space normal
			background-color colour-segment
			font-size 1rem

			&:last-child
				margin-bottom 0

			a
				text-decoration none

			.epic
				color #A335EE
			.legendary
				color #FF8000

			.icon
				border-radius 5px
				veticalCenter()

			.name
				width 140px
				margin-left 40px
				veticalCenter()

		.selection
			vertical-align top
			display inline-block
			width 100px
			height 50px
			line-height 50px
			text-align center
			border-radius 5px
			font-size 1rem
			cursor pointer
			margin-left 20px

			background-color transparent
			box-sizing border-box
			line-height 44px
			border 3px solid darken(colour-segment, 20%)

			&[name="none"]
				selectionColour(#9D9D9D)
			&[name="side"]
				selectionColour(#FFF)
			&[name="any"],
				selectionColour(#1EFF00)
			&[name="mythic"]
				selectionColour(#0070DD)
			&[name="bis"]
				selectionColour(#A335EE)
			&[name="the dream"],
				selectionColour(#FF8000)

		.others
			overflow hidden
			vertical-align top
			margin-bottom -8px
			min-height 58px

		.player
			position relative
			display inline-block
			width 104px
			height 50px
			text-align center
			border-radius 5px
			margin-right 5px
			margin-bottom 8px
			cursor pointer

			.text
				white-space normal
				font-size 1rem
				veticalCenter()
				width inherit

		.options
			display inline-block
			vertical-align top
			margin-left 200px

		.option
			width 104px
			height 50px
			line-height 50px
			text-align center
			margin-right 4px
			display inline-block
			border-radius 5px
			margin-bottom 8px
			font-size 1rem

.order
	width 550px
	margin 50px auto

.boss-order
	position relative
	background-color colour-segment !important

	img
		width 80px
		margin-right 20px

	h2, img
		display inline-block !important

	.spot
		display inline-block
		position absolute
		top 50%
		right 1em
		transform translateY(-50%)
		text-align center
		width 44px
		font-size 1.5em
		font-weight bold

		i
			margin auto
			display block
			cursor pointer

		span
			display block

		.pad
			height 35px

.boss-mini,
.boss
	background-color colour-segment !important

	.panel
		width 20% !important
		text-align center !important

		& > h2
			margin-bottom 0

.boss
	.panel
		& > h3
			margin-top 0
			margin-bottom 0

		& .spot
			margin-top 1em
			width 40px
			display inline-block

			& > i
				margin auto
				display block
				cursor pointer

			& > span
				display block

			& > img
				width 25px

	.slots
		width 79% !important

		.role
			overflow hidden

		.row
			margin-bottom 15px
			margin-left 65px
			font-size 0

			.player
				cursor pointer
				width 104px
				height 50px
				line-height 50px
				text-align center
				margin-right 4px
				display inline-block
				border-radius 5px
				margin-bottom 8px
				font-size 1rem

				&.out
					opacity 0.35

				&:last-child
					margin-right 0

.boss.admin
	.slots
		.players, .subs
			display inline-block
			vertical-align top

		.players
			width 50%

			.player
				position relative
				line-height 70px

				.items
					position absolute
					line-height normal
					top 3px
					left 5px

		.subs
			width 45%
			margin-left 20px

			.player
				cursor auto

.boss-mini
	width 19.5%
	height 310px
	display inline-block
	vertical-align bottom

	.panel
		width 100% !important

	&.segment:last-child
		margin-bottom 1em


// LOGIN BUTTON

.jenn
	position fixed
	right 1em
	top 0.4em
	z-index 30

	& > a
		text-decoration none
		color #5C6166

		& > span
			font-size 1.1em

.menu.buttons
	position fixed
	left 0
	top 0
	z-index 30

	& > a
		text-decoration none

		& > i
			margin-right 0 !important

	#fancy-activator
		cursor pointer

.instance.menu
	position fixed
	left 0
	top 100px

	.instance
		cursor pointer
		width 75px
		height 75px
		background-color colour-segment
		margin-bottom 7px
		border-bottom-right-radius 0.5em
		border-top-right-radius 0.5em

		&.active, &:hover
			background-color darken(colour-segment, 10%)

		img
			width 60px
			height 60px
			margin 7.5px


// SUBMIT FORMS

.remove.form,
.player.form
	position relative
	width 450px
	margin auto
	margin-top 10%

	& > form
		position relative
		width 450px
		background-color colour-segment
		box-shadow 0 0 0 0

		& .classes,
		& .roles
			& .row
				margin-bottom 5px

				&:last-child
					margin-bottom 0

				& .class,
				& .role
					cursor pointer
					width 93px
					height 50px
					margin-right 4px
					display inline-block
					border-radius 5px
					border-width 3px
					border-style solid

					&:last-child
						margin-right 0

				& .role
					& > img
						margin auto
						display block

					&.active
						border-color black !important

					&.caster
						classColour(#8F8F8F)

					&.melee
						classColour(#8F8F8F)

					&.healer
						classColour(#8F8F8F)

					&.tank
						classColour(#8F8F8F)

				& .class
					&.active
						border-color black !important

.login.form
	position relative
	width 750px
	margin auto
	margin-top 10%

	& > .panel
		position absolute
		right 20px
		top -10px
		width 250px

	& > form
		position relative
		width 450px
		background-color colour-segment
		box-shadow 0 0 0 0

		&:before
			content ''
			border-style solid
			border-width 12px
			border-color transparent
			border-left-color colour-segment
			height 0
			position absolute
			width 0
			right -24px
			top 80px


