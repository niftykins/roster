colour-segment = #D1D1D1
colour-bg = #E4E4E4

colour-add = #5BBD72
colour-remove = #D95C5C

colour-dk = #C41F3B
colour-paladin = #F58CBA
colour-priest = #FFFFFF
colour-warlock = #9482C9
colour-shaman = #0070DE
colour-mage = #69CCF0
colour-monk = #00FF96
colour-hunter = #ABD473
colour-rogue = #FFF569
colour-warrior = #C79C6E
colour-druid = #FF7D0A

// MIXINS

classColour(colour)
	background-color colour
	border-color colour


@import url(http://fonts.googleapis.com/css?family=Lato:400,700)

body
	font-family 'Lato', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
	font-size 16px
	background-color colour-bg

.no-select
	-moz-user-select -moz-none
	-khtml-user-select none
	-webkit-user-select none
	-o-user-select none
	user-select none

.show
	display block !important

.ui.grid
	font-size inherit

.bigger.icon
	font-size 3em
	vertical-align middle

.spinner
	top -100px

.ui.left.floated.image
	margin-right 0

.twitter-typeahead
	display block !important

.tt-dropdown-menu
	display none !important

.tt-hint
	color rgba(0, 0, 0, 0.4) !important

// SEARCH

.filter
	position fixed !important
	top 0
	left 0
	z-index 20
	width 100%
	height 100px
	background-color colour-bg

	& .input
		position relative
		margin auto
		width 340px
		display block
		margin-top 16px
		z-index 25

	& .counter
		text-align center
		margin-top 2px

	.view
		position absolute
		width 100%
		bottom 39px
		right -195px
		text-align center
		z-index 19

		i
			cursor pointer
			font-size 30px

// ROSTER

.bosses
	margin-top 100px

	& .notfound
		margin-top 20px
		text-align center
		font-size 22pt

.boss-mini,
.boss
	background-color colour-segment !important

	.panel
		width 20% !important
		text-align center !important

		& > h2
			margin-bottom 0

		& > h3
			margin-top 0
			margin-bottom 0

		& .spot
			margin-top 1em
			width 40px
			display inline-block

			& > i
				margin auto
				display block
				cursor pointer

			& > span
				display block

			& > img
				width 25px

	.slots
		width 79% !important

		.row
			margin-bottom 15px
			margin-left 60px
			font-size 0

			.player
				cursor pointer
				width 104px
				height 50px
				line-height 50px
				text-align center
				margin-right 4px
				display inline-block
				border-radius 5px
				margin-bottom 8px
				font-size 1rem

				&.out
					opacity 0.35

				&:last-child
					margin-right 0

.boss.admin
	.slots
		.role
			overflow hidden

		//width 55% !important
		.melee, .casters, .healers, .tanks
			width 50%

		.subs
			width 40%
			float right

			.player
				cursor auto

		.row
			display inline-block
			margin-left 15px

.boss-mini
	width 19.5%
	height 310px
	display inline-block
	vertical-align bottom

	& .panel
		width 100% !important

	&.segment:last-child
		margin-bottom 1em


// LOGIN BUTTON

.jenn
	position fixed
	right 1em
	top 0.4em
	z-index 30

	& > a
		text-decoration none
		color #5C6166

		& > span
			font-size 1.1em

.menu.buttons
	position fixed
	left 0
	top 0
	z-index 30

	& > a
		text-decoration none

		& > i
			margin-right 0 !important

	#fancy-activator
		cursor pointer

.instance.menu
	position fixed
	left 0

	.instance
		cursor pointer
		width 75px
		height 75px
		background-color #d1d1d1
		margin-bottom 7px
		border-bottom-right-radius 0.5em
		border-top-right-radius 0.5em

		&.active, &:hover
			background-color darken(#d1d1d1, 10%)

		img
			width 60px
			height 60px
			margin 7.5px


// SUBMIT FORMS

.remove.form,
.player.form
	position relative
	width 450px
	margin auto
	margin-top 10%

	& > form
		position relative
		width 450px
		background-color colour-segment
		box-shadow 0 0 0 0

		& .classes,
		& .roles
			& .row
				margin-bottom 5px

				&:last-child
					margin-bottom 0

				& .class,
				& .role
					cursor pointer
					width 93px
					height 50px
					margin-right 4px
					display inline-block
					border-radius 5px
					border-width 3px
					border-style solid

					&:last-child
						margin-right 0

				& .role
					& > img
						margin auto
						display block

					&.active
						border-color black !important

					&.caster
						classColour(#8F8F8F)

					&.melee
						classColour(#8F8F8F)

					&.healer
						classColour(#8F8F8F)

					&.tank
						classColour(#8F8F8F)

				& .class
					&.active
						border-color black !important

.login.form
	position relative
	width 750px
	margin auto
	margin-top 10%

	& > .panel
		position absolute
		right 20px
		top -10px
		width 250px

	& > form
		position relative
		width 450px
		background-color colour-segment
		box-shadow 0 0 0 0

		&:before
			content ''
			border-style solid
			border-width 12px
			border-color transparent
			border-left-color colour-segment
			height 0
			position absolute
			width 0
			right -24px
			top 80px


